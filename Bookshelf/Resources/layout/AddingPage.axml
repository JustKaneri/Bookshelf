<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/scrollView1">
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout1">
			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/EdtName"
				android:textAlignment="center"
				android:hint="Название книги"
				android:layout_marginTop="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="5dp" />
			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/EdtAutor"
				android:textAlignment="center"
				android:hint="Название автор"
				android:layout_marginLeft="10.0dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="5dp"/>
			<ImageView
				android:src="@android:drawable/ic_menu_gallery"
				android:layout_width="match_parent"
				android:layout_height="111.0dp"
				android:id="@+id/ImvBookAdd"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="5dp"/>
			<Spinner
				android:layout_width="match_parent"
				android:layout_height="32.0dp"
				android:id="@+id/SpnCatecogr"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="5dp"
				android:textAlignment="center"
				/>
			<EditText
				android:inputType="number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/EdtStr"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:textAlignment="center"
				android:hint="Кол-во страниц"
				android:layout_marginBottom="5dp"
				android:maxLength="5" />
			<EditText
				android:inputType="number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/EdtMark"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:textAlignment="center"
				android:hint="Оценка книги от 1 до 5"
				android:layout_marginBottom="5dp"
				android:maxLength="1" />
			<EditText
				android:inputType="textMultiLine"
				android:layout_width="match_parent"
				android:layout_height="110.0dp"
				android:id="@+id/EdtDiscript"
				android:hint="Описание (по желанию)"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:textAlignment="center"
				android:layout_marginBottom="5dp"/>
			<Button
				android:text="Сохранить"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/BtnAdd"
				android:layout_marginTop="23.0dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:background="#fffc6e51"
				android:textColor="#ffffffff" />
		</LinearLayout>
	</ScrollView>
	

</LinearLayout>
